<comment>
problem   = Stir turbulence
configure = --prob=turb_v2 -fft 

<job>
problem_id = Turb # problem ID: basename of output filenames

<output1>
file_type  = hst        # History data dump
dt         = 0.00038780668225097873 # time increment between outputs

<output2>
file_type = hdf5                                 # HDF5 data dump
variable  = prim       # variables to be output
dt        = 0.001551226729003915 # time increment between outputs

<output3>
file_type = rst                                 
dt        = 0.07756133645019575 # time increment between outputs

<output4>
file_type   = hdf5
dt          = 0.001551226729003915
variable    = user_out_var


<time>
cfl_number  = 0.3        # The Courant, Friedrichs, & Lewy (CFL) Number
nlim        = -1   # cycle limit
tlim        = 0.7756133645019575       # time limit
integrator  = rk2       # time integration algorithm
xorder      = 2         # order of spatial reconstruction
ncycle_out  = 1         # interval for stdout summary info

<mesh>
nx1    = 128                    # number of zones in x1-direction
x1min  = -0.008611064334512203                  # minimum value of x1
x1max  = 0.008611064334512203                  # maximum value of x1
ix1_bc = periodic                   # inner-x1 boundary condition
ox1_bc = periodic                   # outer-x1 boundary condition

nx2    = 128                    # number of zones in x2-direction
x2min  = -0.008611064334512203                  # minimum value of x2
x2max  = 0.008611064334512203                  # maximum value of x2
ix2_bc = periodic                   # inner-x2 boundary condition
ox2_bc = periodic                   # outer-x2 boundary condition

nx3    = 128                    # number of zones in x3-direction
x3min  = -0.008611064334512203                  # minimum value of x3
x3max  = 0.008611064334512203                  # maximum value of x3
ix3_bc = periodic                   # inner-x3 boundary condition
ox3_bc = periodic                   # outer-x3 boundary condition

refinement  = none  # type of mesh refinement to use

<meshblock>
nx1 = 32  # block size in x1-direction
nx2 = 32  # block size in x2-direction
nx3 = 32  # block size in x3-direction

<hydro>
gamma      = 1.6666666666666667  # gamma = C_p/C_v
pfloor     = 0.0005

<turbulence>
dedt       = 1.4606480270670061e-06      # Energy injection rate (for driven) or Total energy (for decaying)
nlow       = 0             # cut-off wavenumber at low-k
nhigh      = 2             # cut-off wavenumber at high-k
expo       = 2.0           # power-law exponent
tcorr      = 0.11080190921456536    # correlation time for OU process (both impulsive and continuous)
dtdrive    = 0.00011080190921456536  # time interval between perturbation (impulsive)
f_shear    = 0.0   # the ratio of the shear component
rseed      = 1     # if non-negative, seed will be set by hand (slow PS generation)


<problem>

turb_flag    = 2    # 1 for decaying, 2 (impulsive) or 3 (continuous) for driven turbulence

# User-defined variables:

cooling_flag = 0
cloud_flag   = 0 

amb_rho      = 1.0     # Density of the ambient medium

cloud_radius = 0.00043055321672561014 # in code units
cloud_time   = 0.7756133645019575   # Time of insertion of cloud (in code units)
cloud_chi    = 100    # Density contrast of the cloud

T_floor      = 40000      # Floor temperature
T_ceil       = 100000000       # Ceiling temperature
T_hot_req    = 4000000    # Hot medium temperature required
T_hot        = 99555.55555555555        # Hot medium temperature initiated
T_cold       = 80000       # Cold medium temperature
T_cut_mul    = 0.5    # T_cut = T_hot_req * T_cut_mul
T_cut        = 2000000.0        # T_cut = T_hot_req * T_cut_mul

Xsol            = 1.0       # H-abundance in solar abundance
Zsol            = 1.0       # Metallicity in solar abundance

cloud_pos_x  = 0.0       # Cloud center x-coordinate
cloud_pos_y  = 0.0       # Cloud center y-coordinate
cloud_pos_z  = 0.0       # Cloud center z-coordinate

B_x          = 0.0  # Magnetic field in x-direction
B_y          = 0.0  # Magnetic field in y-direction
B_z          = 0.03405587639419029 # Magnetic field in z-direction
